#This is a code to find the basic expantion of Binomial theorem.
#However, this does not work with big numbers currently working on it. 
#Also workiing on basic nCr and nPr calculator. Will try not to use geeks for geeks. 



#include <bits/stdc++.h>
using namespace std;
 
int fact(int n);
 
int nCr(int n, int r)
{
    return fact(n) / (fact(r) * fact(n - r));
}
 
// Returns factorial of n
int fact(int n)
{
    int res = 1;
    for (int i = 2; i <= n; i++)
        res = res * i;
    return res;
}
int main()
{
	cout<<"Enter the value of n in (a+b)^n: ";
	int n;cin>>n;
	int j=n;
	for(int r=0;r<=n;r++)
	{
		cout<<nCr(n,r)<<" a^"<<j<<"b^"<<r;
		j--;
		if(r!=n)
		{
			cout<<" + ";
		}
	}
}
	
